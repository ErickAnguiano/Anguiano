{% extends "baseAdminLTE.html.twig" %}

{% block title %} MY APP {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('plugins/datatables-bs4/css/dataTables.bootstrap4.min.css') }}">
  <link rel="stylesheet" href="{{ asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css') }}">
{% endblock %}

{% block title_page %} 
Administraci√≥n de usuarios 
{% endblock %}

{% block breadcrum %}
  <li class="breadcrumb-item"><a href="{{ path('app_dashboard')}}">Dashboard</a></li>
  <li class="breadcrumb-item active"></li>
{% endblock %}

{% block container %}
<div class="mb-20 col-lg-12">
    <a href="{{ path('app_admin_report_user') }}" class="btn btn-primary">Generar Reporte de Usuarios</a>
</div>
<div class="card">
  <div class="card-body">
  <table class="table table-bordered table-hover" id="example2">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol</th>
      </tr>
    </thead>
    <tbody>
        {% for item in list %}
        <tr>
          <td>{{item.name ~' '~ item.lastname | upper ~' '~ item.secondSurname | upper  }}</td>
          <td>{{item.email}}</td>
          <td>{{item.role | replace ({'ROLE_TEACHER':'INSTRUCTOR','ROLE_STUDENT':'ESTUDIANTE'})}}</td>
        </tr>
        {% endfor %}
    </tbody>
  </table>
  </div>
</div>


{% endblock %}


{% block javascript %}

<!-- DataTables -->
<script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>

<script>
  $(function () {
    $("#example2").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });
</script>

{% endblock %}
