{% extends "baseAdminLTE.html.twig" %}

{% block title %} MY APP {% endblock %}
{% block stylesheets %}

  <link rel="stylesheet" href="{{ asset('plugins/datatables-bs4/css/dataTables.bootstrap4.min.css') }}">
  <link rel="stylesheet" href="{{ asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css') }}">

{% endblock %}

{% block title_page %} Administración de Subcategorías {% endblock %}

{% block container %}

<div class="row">

  <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">

    <div class="card">

      <div class="card-body">
      

       {{ form_start(formSubcategory) }}
         <div class="form-group">
        {{ form_row( formSubcategory.name) }}
      </div>
      <div class="form-group">
        {{ form_row( formSubcategory.category) }}
      </div>
      <div class="form-group">
        {{ form_row( formSubcategory.submit) }}
      </div>
      {{ form_end(formSubcategory) }}
      </div>
    </div>
  </div>
</div> 



    <div class="card">
              <div class="card-header">
                <h3 class="card-title">Subcategorias features & hover style</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Subcatgoria</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                  </tr>
                  </thead>

                  <tbody>
                      {% for item in lista %}
                          <tr>
						    <td>{{ item.name }}<br/></td>
						    <td>{{ item.category.name }}</td>
						    <td><a href="{{ path('app_admin_subcategory_delete',{'id':item.id} )}}" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
						  </tr>
					  {% endfor %} 
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Subcatgoria</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
     </div>
            <!-- /.card -->

  </div>



</div>

{% endblock %}
{% block javascript %}

<!-- DataTables -->
<script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
<script src="{{ asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>

<script>
  $(function () {
    $("#example2").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });
</script>

{% endblock %}



