{% extends "baseAdminLTE.html.twig" %}

{% block title %} MY APP {% endblock %}
{% block title_page %} Detalle del curso {% endblock %}

{% block container %}
	<div class="row">
		<div class="col-lg-12">
			<h1>{{ course.title }}</h1>
		</div>
		<div class="col-lg-4">
			<div class="card">
				<img class="card-img-top" src="{{asset('uploads/img/'~ course.image)}}">
				<div class="card-body">
					<h3 class="card-title">{{ course.title }}</h3>
					<p class="card-text">{{ course.description }}</p>
					<p class="card-text">{{ course.category.name }} / {{ course.subcategory.name }}</p>
					<p class="card-text">{{ course.lang.lang }}</p>
					<p class="card-text">{{ course.price }}</p>
				</div>	
			</div>		
		</div>
		


		

	<div class="col-lg-4">
		{{ form_start(formSection) }}
		{{ form_end(formSection) }}
	</div>

	<div class="col-lg-4">
		{{ form_start(formActivity) }}
		{{ form_end(formActivity) }}
	</div>
	<div class="col-lg-12">
		<ul>
			{% for section in course.sections %}
				<li>
					<h3>{{ section.title }}</h3>
					<ul>
					{% for activity in section.activities %}
						<li>{{ activity.title }}</li>
					{% endfor %}
					</ul>
				</li>
			{% endfor %}
		</ul>
	</div>



{% endblock %}