{% extends "base.html.twig" %}

{% block title %} MY APP {% endblock %}
{% block stylesheets %}{% endblock %}

{% block container %}
<div class="row">
	<div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
	</div>
	<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
  		 <div class="card">
			<div class="card-body">
	   			<h3 class="card-title"> Registrar Usuario </h3>
				{{ form_start(formUser) }}
				<div class="form-group">
				{{ form_row( formUser.name) }}
				</div>
				<div class="form-group">
				{{ form_row( formUser.lastname) }}
				</div>
				<div class="form-group">
				{{ form_row( formUser.secondSurname) }}
				</div>
				<div class="form-group">
				{{ form_row( formUser.email) }}
				</div>
				<div class="form-group">
				{{ form_label( formUser.password) }}
				{{ form_widget( formUser.password) }}
				</div>
				<div class="form-group">
				{{ form_row( formUser.role) }}
				</div>
				<div class="form-group">
				{{ form_row( formUser.submit) }}
				</div>
				{{ form_end(formUser) }}
			</div>
 		</div>
	</div>
</div>
{% endblock %}
{% block javascript %}{% endblock %}